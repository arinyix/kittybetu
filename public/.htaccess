# Desligar listagem
Options -Indexes

DirectoryIndex index.php

# Segurança básica
<IfModule mod_headers.c>
  Header always set X-Frame-Options "DENY"
  Header always set X-Content-Type-Options "nosniff"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  # CSP: tudo local; img data: permitido; inline CSS liberado só para este projeto (evite inline em produção)
  Header set Content-Security-Policy "default-src 'self'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; object-src 'none'; upgrade-insecure-requests; block-all-mixed-content"
</IfModule>

# URL limpinha para assets
<IfModule mod_rewrite.c>
  RewriteEngine On
</IfModule>

# PHP configs úteis
php_value session.use_strict_mode 1
php_value session.cookie_httponly 1
